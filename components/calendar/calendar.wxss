.calendar {
  width: 85%;
  margin: auto;
  background-color: #0e0e0e;
  border: 1rpx solid rgba(255,255,255,0.1);
  transform: translateY(-10%);
  border-radius: 10rpx;
}

.calendar .calendar-name {
  font-size: 26rpx;
  margin-left: 30rpx;
  padding: 50rpx 0 10rpx;
  font-weight: 300;
  display: inline-block;
}


.calendar .title {
  font-size: 62rpx;
  color: #fff;
  padding: 30rpx;
  line-height: 60rpx;
}

.calendar .title .flex{
  width: 100%;
}

.calendar .title .flex .right-handle{
  width: 100rpx;
}

.calendar .title .year-month {
  margin-right: 20rpx;
}

.calendar .title .icon {
  padding: 0 10%;
  /* padding: 0 16rpx; */
  font-size: 32rpx;
  color: #999;
}

.calendar .title .open {
  background-color: #f6f6f6;
  color: #999;
  font-size: 22rpx;
  line-height: 36rpx;
  border-radius: 18rpx;
  padding: 0 14rpx;
}

.calendar .calendar-week {
  line-height: 40rpx;
  padding: 15rpx 25rpx;
  font-size: 28rpx;
  color: #999;
}

.calendar .calendar-week .view {
  width: 100rpx;
  text-align: center;
}

.calendar .calendar-main {
  padding: 30rpx 25rpx;
  transition: height 0.3s;
  align-content: flex-start;
  overflow: hidden;
  background-color: #fff;
}

.calendar .calendar-main .day {
  position: relative;
  width: 14.2%;
  /* width: 100rpx; */
  color: #666;
  text-align: center;
  height: 72rpx;
}

.calendar .calendar-main .day .bg {
  height: 56rpx;
  line-height: 56rpx;
  font-size: 26rpx;
  color: rgba(0,0,0,0.8);
  /* color: #333; */
  font-weight: 400;
}

.calendar .calendar-main .day .select {
  width: 56rpx;
  border-radius: 50%;
  text-align: center;
  color: #fff;
  background: linear-gradient(-30deg, #000, #999);
  /* background: linear-gradient(-60deg, #0FDAC5, #1BC7B0); */
  /* box-shadow: 0px 5px 16px 0px #C6F3ED; */
  margin: 0 auto;
}

.calendar .calendar-main .day .other-month {
  color: #ccc;
}

.calendar .calendar-main .day .spot {
  width: 8rpx;
  height: 8rpx;
  background-color: #1DCDB8;
  border-radius: 50%;
  margin: 6rpx auto 0;
}

.calendar .calendar-footer{
  text-align: right;
  padding: 30rpx;
  font-size: 24rpx;
}

.calendar .calendar-footer text {
  margin-left: 30rpx;
}