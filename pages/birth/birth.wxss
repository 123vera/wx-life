#birth {
  position: relative;
  width: 100%;
  height: 100%;
  padding: 100rpx 0;
  box-sizing: border-box;
}
#birth .age {
  display: inline-block;
  width: 100%;
  text-align: center;
  font-size: 36rpx;
  margin-top: 50rpx;
  font-weight: 200;
}
#birth .age-segmented {
  padding: 5% 50rpx;
}
#birth .age-segmented .title {
  font-size: 27rpx;
  color: rgba(255, 255, 255, 0.5);
}
#birth .age-segmented .wrapper {
  min-height: 50rpx;
  border: 1px solid rgba(255, 255, 255, 0.5);
  margin-top: 20rpx;
}
#birth .age-segmented .wrapper .wrapper-top,
#birth .age-segmented .wrapper .wrapper-bottom {
  display: flex;
  justify-content: space-around;
  align-items: center;
}
#birth .age-segmented .wrapper .wrapper-top text,
#birth .age-segmented .wrapper .wrapper-bottom text {
  width: 33%;
  text-align: center;
  padding: 10rpx 0;
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.8);
  border-right: 1px solid rgba(255, 255, 255, 0.5);
}
#birth .age-segmented .wrapper .wrapper-top text:last-child,
#birth .age-segmented .wrapper .wrapper-bottom text:last-child {
  border-right: none;
}
#birth .age-segmented .wrapper .wrapper-top {
  border-bottom: 1px solid rgba(255, 255, 255, 0.5);
}
#birth .btn-wrap button {
  color: rgba(255, 255, 255, 0.5);
  font-size: 24rpx;
  padding: 4rpx 30rpx;
  box-sizing: border-box;
  border-radius: 100rpx;
  width: 260rpx;
  letter-spacing: 2rpx;
}
#birth .btn-wrap button.mini-btn_setbirth {
  margin-top: 30rpx;
}
#birth .m-calendar {
  position: fixed;
  top: 0;
  width: 100%;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 0 40rpx;
  box-sizing: border-box;
  background-color: #000000;
  opacity: 0;
  transition: all 0.5s;
  will-change: opacity;
}
#birth .m-calendar.show {
  opacity: 1;
}
